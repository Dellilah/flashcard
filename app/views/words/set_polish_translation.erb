<%= form_for(@word) do |f| %>
  <div class="field">
    <%= f.label :in_english %><br />
    <%= f.text_area :in_english, :cols => 30, :rows => 3 %>
  </div>
  <div class="field">
    <%= f.label :in_polish %><br />
    <%= f.select(:in_polish, @translations.map { |value| [ value, value ] }) %>
  </div>
  <div class="actions">
    <%= f.submit 'Save', :class => 'btn btn-primary' %>
  </div>
<% end %>

<% p @word.images_from_google %>

<%= link_to('Cancel', @word, :class => 'btn btn-danger') %>
