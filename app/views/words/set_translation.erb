<% if @word.polish? %>
  <%= form_for(@word) do |f| %>
    <div class="field">
      <%= f.label :in_polish %><br />
      <%= f.text_area :in_polish, :cols => 30, :rows => 3 %>
    </div>
    <div class="field">
      <%= f.label :in_english %><br />
      <%= f.select(:in_english, @translations.map { |value| [ value, value ] }) %>
    </div>

    <div class="actions">
      <%= f.submit 'Save', :class => 'btn btn-primary' %>
    </div>
  <% end %>
<% else %>
  <%= form_for(@word) do |f| %>
    <div class="field">
      <%= f.label :in_english %><br />
      <%= f.text_area :in_english, :cols => 30, :rows => 3 %>
    </div>
    <div class="field">
      <%= f.label :in_polish %><br />
      <%= f.select(:in_polish, @translations.map { |value| [ value, value ] }) %>
    </div>

    <div class="actions">
      <%= f.submit 'Save', :class => 'btn btn-primary' %>
    </div>
  <% end %>

<% end %>

<%= button_to('Cancel', @word, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger') %>
